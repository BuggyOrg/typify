{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "program": "${workspaceRoot}/.vscode/debug.js",
      "cwd": "${workspaceRoot}",
      "args": ["res.json",],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "internalConsole",
      "sourceMaps": true,
      "smartStep": false,
      "skipFiles": [
        "node_modules/lodash/**/*"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "name": "Mocha Tests",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "--recursive",
        "--no-timeouts",
        "--colors",
        "--compilers",
        "js:babel-register"
      ],
      "console": "internalConsole",
      "sourceMaps": true,
      "smartStep": false,
      "skipFiles": [
        "node_modules/lodash/**/*"
      ]

    }
  ]
}